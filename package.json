{
	"name": "aquilon",
	"displayName": "aquilon",
	"description": "A simple formatter to make your Tailwind/WindiCSS classes more readable",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "aquilon.organizeClasses",
				"title": "Aquilon: Format & Sort"
			}
		],
		"keybindings": [
			{
				"command": "aquilon.sortTailwindClasses",
				"key": "ctrl+alt+t",
				"mac": "shift+cmd+t",
				"when": "editorFocus"
			}
		],
		"configuration": [
			{
				"title": "Aquilon",
				"properties": {
					"aquilon.classRegex": {
						"type": "object",
						"default": {
							"html": "\\bclass\\s*=\\s*[\\\"\\']([\\._a-zA-Z0-9\\s\\-\\:\\/]+)[\\\"\\']"
						},
						"description": "Regex to find classes in the HTML",
						"scope": "window"
					},
					"aquilon.runOnSave": {
						"type": "boolean",
						"default": true,
						"description": "Enable/Disable formatting on save",
						"scope": "window"
					},
					"aquilon.placeCustomeClassesFirst": {
						"default": true,
						"description": "Control if classes not handled by Taiwind/WindiCSS should be placed first or last (true = first | false = last)",
						"type": "boolean",
						"scope": "window"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}